<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".views.fragments.RelationInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:src="@drawable/avatar" />

            <!-- Thông tin bố -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Thông tin bố"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFather"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/inf_box"
                android:padding="8dp" />

            <!-- Thông tin mẹ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Thông tin mẹ"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvMother"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/inf_box"
                android:padding="8dp" />

            <!-- Thông tin vợ/chồng -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Thông tin vợ/chồng"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvPartner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/inf_box"
                android:padding="8dp" />

            <!-- Thông tin các con -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Thông tin các con"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/llChildren"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inf_box"
                android:padding="8dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
